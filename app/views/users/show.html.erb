<body>
  <div class="clear"></div>
  <!-- start Main Wrapper -->
  <div class="main-wrapper scrollspy-container">
    <!-- start end Page title -->
    <div class="page-title" style="background-image:url(<%= asset_path 'my_room.jpeg'%>);">
      <div class="container">
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
            <h2 class="text-white">せきやじょうじ</h2>
            <div class="user-thumbnail mb-10">
<!--             <div class="user-thumbnail mb-10" style="background-image:url(<%= asset_path 'sekiya.jpeg'%>);">
            </div> -->
            <!-- <img src="images/books/book9.jpg" alt="" class="user-thumbnail"> -->
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- end Page title -->
    <div class="content-wrapper">
      <div class="container">
        <div class="row">
          <div class="col-sm-8 col-md-8">

            <form class="payment-box", name="fm", onsubmit="return process()">
              <div class="payment-header clearfix">
                <h5 class="heading mt-0">購入者情報</h5>
              </div>
              <div class="payment-content">
                <div class="payment-traveller mb-0">
                  <div class="form-horizontal">
                    <div class="form-group gap-20">
                      <label class="col-sm-4 col-md-4 control-label">姓</label>
                      <div class="col-sm-8 col-md-6">
                        <input type="text" class="form-control" name="lastname" value="<%= current_user.lastname%>">
                      </div>
                    </div>
                  </div>
                  <div class="form-horizontal">
                    <div class="form-group gap-20">
                      <label class="col-sm-4 col-md-4 control-label">名</label>
                      <div class="col-sm-8 col-md-6">
                        <input type="text" class="form-control" name="firstname" value="<%= current_user.firstname%>">
                      </div>
                    </div>
                  </div>
                  <div class="form-horizontal">
                    <div class="form-group gap-20">
                      <label class="col-sm-4 col-md-4 control-label">郵便番号:</label>
                      <div class="col-sm-8 col-md-6">
                        <input type="text" class="form-control" value="<%= current_user.postalcode %>">
                      </div>
                    </div>
                  </div>
                  <div class="form-horizontal">
                    <div class="form-group gap-20">
                      <label class="col-sm-4 col-md-4 control-label">住所:</label>
                      <div class="col-sm-8 col-md-6">
                        <input type="text" class="form-control" value="<%= current_user.place %>">
                      </div>
                    </div>
                  </div>
                </div>
                <div class="text-center">
                  <input type="submit" class="btn btn-primary btn-sm btn-inverse" value="購入者情報の編集" />
                </div>
              </div>
            </form>

            <form class="payment-box", name="rg_fm", onsubmit="return registration_process()">
              <div class="payment-header clearfix">
                <h5 class="heading mt-0">登録情報</h5>
              </div>
              <div class="payment-content">
                <div class="payment-traveller mb-0">
                  <div class="form-horizontal">
                    <div class="form-group gap-20">
                      <label class="col-sm-4 col-md-4 control-label">メールアドレス:</label>
                      <div class="col-sm-8 col-md-6">
                        <input type="email" class="form-control" name="email" value="<%= current_user.email%>">
                      </div>
                    </div>
                  </div>
                  <div class="form-horizontal">
                    <div class="form-group gap-20">
                      <label class="col-sm-4 col-md-4 control-label">現在のパスワード:</label>
                      <div class="col-sm-8 col-md-6">
                        <input type="password" class="form-control" value="">
                      </div>
                    </div>
                  </div>
                  <div class="form-horizontal">
                    <div class="form-group gap-20">
                      <label class="col-sm-4 col-md-4 control-label">新しいパスワード:</label>
                      <div class="col-sm-8 col-md-6">
                        <input type="password" class="form-control" value="">
                      </div>
                    </div>
                  </div>
                </div>
                <div class="text-center">
                  <button class="btn btn-primary btn-sm btn-inverse">登録情報の編集</button>
                </div>
              </div>
            </form>

          </div>
          <div class="col-sm-4 col-md-4 mt-50-xs">
            <aside class="sidebar">
              <div class="sidebar-inner no-border for-blog">
                <div class="clear"></div>
                <div class="sidebar-module">
                  <% unless @orders.empty? %>
                    <h4 class="sidebar-title">購入履歴</h4>
                    <div class="sidebar-module-inner">
                      <ul class="sidebar-post">
                        <%= render partial: 'order', collection: @orders %>
                      </ul>
                    </div>
                  </div>
                <% end %>
                <% unless @exhibits.empty? %>
                <h4 class="sidebar-title">出品履歴</h4>
                  <div class="sidebar-module-inner">
                    <ul class="sidebar-post">
                      <%= render partial: 'exhibit', collection: @exhibits %>
                    </ul>
                  </div>
                  <% end %>
                <div class="clear"></div>
              </div>
            </aside>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- end Main Wrapper -->

  <footer class="footer">
    <div class="container">
      <div class="main-footer">
        <div class="row">
          <div class="col-xs-12 col-sm-5 col-md-3">
            <div class="footer-logo">
              <img src="../assets/techbook_logo.png" alt="Logo" />
            </div>
            <p class="footer-address">150-0000 東京都渋谷区道玄坂２丁目<br>新大宗ビル３号館８階<br/> <i class="fa fa-phone"></i> +66 28 878 5452 <br/> <i class="fa fa-phone"></i> +66 2 547 2223 <br/> <i class="fa fa-envelope-o"></i> <a href="#">support@techbook.com</a></p>
            <div class="footer-social">
              <a href="#" data-toggle="tooltip" data-placement="top" title="Facebook"><i class="fa fa-facebook"></i></a>
              <a href="#" data-toggle="tooltip" data-placement="top" title="Twitter"><i class="fa fa-twitter"></i></a>
              <a href="#" data-toggle="tooltip" data-placement="top" title="Github"><i class="fa fa-github"></i></a>
            </div>
            <p class="copy-right">&#169; Copyright 2016 techbook. All Rights Reserved</p>
          </div>
          <div class="col-xs-12 col-sm-7 col-md-9">
            <div class="row gap-10">
              <!-- <div class="col-xs-12 col-sm-4 col-md-3 col-md-offset-3 mt-30-xs"> -->
              <div class="col-xs-12 col-sm-4 col-md-3 mt-30-xs col-md-offset-3">
                <h5 class="footer-title">techbookについて</h5>
                <ul class="footer-menu">
                  <li><a href="#">運営会社について</a></li>
                  <li><a href="#">利用規約</a></li>
                  <li><a href="#">プライバシーポリシー</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <!-- start Back To Top -->
  <div id="back-to-top">
     <a href="#"><i class="fa fa-angle-up"></i></a>
  </div>
  <!-- JS -->
  <script type="text/javascript" src="../assets/form.js">
  </script>
  <script type="text/javascript" src="../assets/registration_form.js">
  </script>

</body>
